# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /play/*variant              controllers.Application.play(variant)
GET     /generate                   controllers.Application.generate
GET     /up/*variant                controllers.Application.like(variant, up : Boolean = true)
GET     /down/*variant              controllers.Application.like(variant, up : Boolean = false)

# Static resources
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
GET     /audio/*file                controllers.Application.getAudioFile(file)